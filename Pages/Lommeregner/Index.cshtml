<div class="container-sm">
    <h1>Velkommen til Lommeregneren</h1>
    <p>Opret spillere på begge hold og se i bunden hvilket hold der har størst chance for at vinde </p>

    <div class="row">
        <div class="col p-6 bg-danger text-white">
            <table>
                <thead>
                    <tr>
                        <th>Nummer</th>
                        <th>Navn</th>
                        <th>Rating</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var spiller in Model.Spillere.Where(s => s.Hold == 1))
                    {
                        <tr>
                            <td>@spiller.Nummer</td>
                            <td>@spiller.Name</td>
                            <td>@spiller.Rating</td>
                            <td>@spiller.Type</td>



                            <td><a class="btn btn-dark" asp-page="EditSpiller" asp-route-nummer="@spiller.Nummer">Edit</a></td>
                            <td><a class="btn btn-dark" asp-page="DeleteSpiller" asp-route-nummer="@spiller.Nummer">Delete</a></td>


                        </tr>

                    }
                </tbody>
            </table>
            <a class="btn btn-dark" asp-page="CreateSpiller">Opret spiller</a>

            <div class="container p-3 my-3 bg-dark text-white"> Gennemsnittet af hold 1's rating er: @Model.UdregnGennemsnit(1) </div>
            


        </div>
        <div class="col p-6 bg-dark text-white">
            <table>
                <thead>
                    <tr>
                        <th>Nummer</th>
                        <th>Navn</th>
                        <th>Rating</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var spiller in Model.Spillere.Where(s => s.Hold == 2))
                    {
                        <tr>

                            <td>@spiller.Nummer</td>
                            <td>@spiller.Name</td>
                            <td>@spiller.Rating</td>
                            <td>@spiller.Type</td>



                            <td><a class="btn btn-danger" asp-page="EditSpiller" asp-route-nummer="@spiller.Nummer">Edit</a></td>
                            <td><a class="btn btn-danger" asp-page="DeleteSpiller" asp-route-nummer="@spiller.Nummer">Delete</a></td>


                        </tr>
                    }


                </tbody>

            </table>

            <a class="btn btn-danger" asp-page="CreateSpiller">Opret spiller</a>

            <div class="container p-3 my-3 bg-danger text-white"> Gennemsnittet af hold 2's rating er: @Model.UdregnGennemsnit(2)    </div>
            

            

        </div>

    </div>
</div>

